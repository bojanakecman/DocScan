<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calibation_control"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical|bottom">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginBottom="20dp"
            android:id="@+id/calibrate_button"
            android:layout_height="@dimen/calibrate_button_height"
            android:layout_width="@dimen/calibrate_button_width"
            android:visibility="invisible"
            android:background="@drawable/calibrate_button_selector"
            app:srcCompat="@drawable/ic_calibrate"
        />

</RelativeLayout>